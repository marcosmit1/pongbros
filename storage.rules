rules_version = '2';

service firebase.storage {
  match /b/{bucket}/o {
    match /bar_images/{imageId} {
      // Allow read access to all authenticated users (for the mobile app)
      allow read: if request.auth != null;
      
      // Allow write access only during venue registration or update
      allow create, update: if request.auth != null
        && request.resource.size < 5 * 1024 * 1024  // Max 5MB
        && request.resource.contentType.matches('image/.*');  // Must be an image
    }
  }
} 