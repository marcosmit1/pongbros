rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    // Bar document rules
    match /bars/{barId} {
      // Allow read/write if the user is the bar owner
      allow read, write: if request.auth != null && request.auth.uid == barId;
      
      // Allow creation during registration
      allow create: if request.auth != null && 
                   request.auth.uid == barId &&
                   request.resource.data.keys().hasAll(['name', 'address', 'pricePerHour', 'tables']);
    }
    
    // Booking rules
    match /bookings/{bookingId} {
      // Allow bars to read their own bookings
      allow read: if request.auth != null && 
                 resource.data.barId == request.auth.uid;
      
      // Allow bars to update booking status
      allow update: if request.auth != null && 
                   resource.data.barId == request.auth.uid &&
                   request.resource.data.diff(resource.data).affectedKeys()
                     .hasOnly(['status']);
                     
      // Allow creation of bookings (this will be used by the mobile app)
      allow create: if request.auth != null &&
                   request.resource.data.keys().hasAll(['barId', 'userId', 'tableNumber', 'date', 'duration', 'status']);
    }
  }
} 