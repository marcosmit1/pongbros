rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    // Venue document rules
    match /venues/{venueId} {
      // Allow read access to all authenticated users (for the mobile app)
      allow read: if request.auth != null;
      
      // Allow venues to update their own data
      allow update: if request.auth != null && 
                   request.auth.uid == venueId &&
                   request.resource.data.keys().hasAll([
                     'name', 'address', 'description', 'capacity',
                     'pricePerHour', 'openingHours', 'location'
                   ]);
    }
    
    // Booking rules
    match /bookings/{bookingId} {
      // Allow venues to read their own bookings
      allow read: if request.auth != null && 
                 resource.data.venueId == request.auth.uid;
      
      // Allow venues to update booking status
      allow update: if request.auth != null && 
                   resource.data.venueId == request.auth.uid &&
                   request.resource.data.diff(resource.data).affectedKeys()
                     .hasOnly(['status']);
                     
      // Allow creation of bookings (for the mobile app)
      allow create: if request.auth != null &&
                   request.resource.data.keys().hasAll(['venueId', 'userId', 'tableNumber', 'date', 'duration', 'status']);
    }
  }
} 